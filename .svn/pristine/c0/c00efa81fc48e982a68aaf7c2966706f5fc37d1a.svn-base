<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<html>
<head>
    <title>showGoods</title>
    <style >

        a {
            text-decoration:none;
        }
        .textbox{border:1px #139667 solid;height:26px;line-height:26px;padding:5px;font-size:12px; vertical-align:middle;}
        .textbox_295{width:295px;height: 50px}
        .textbox_225{width:225px;}
    </style>
    <link rel="stylesheet" type="text/css" href="<%=request.getContextPath()%>/resources/css/bootstrap.css">
</head>
<body>
    <div class="rt_content" style="overflow:auto;width:100%; height:80%;">
        <div class="page_title">
            <h2 style="color: burlywood;font-family: 方正粗黑宋简体 ">商品列表展示</h2>
            <a href="<%=request.getContextPath()%>/goods/add" class="btn">添加商品</a>
        </div>
        <form action="<%=request.getContextPath()%>/goods/queryGoods" method="post">
            <section class="mtb">
                <select class="select" name="goodsCategory">
                    <option>选择种类</option>
                    <option>果茶</option>
                    <option>奶茶</option>
                    <option>冷萃茶</option>
                    <option>烧仙草</option>
                    <option>咖啡</option>
                </select>
                <input type="text" class="textbox textbox_225" name="goodsName" placeholder="输入商品名称关键词"/>
                <input type="text" class="textbox textbox_225" name="lowPrice" placeholder="输入期望最低价格"/>
                <input type="text" class="textbox textbox_225" name="highPrice" placeholder="输入期望最高价格"/>
                <input type="submit" value="查询" class="btn"/>
            </section>
        </form>
        <table class="table table-hover" width="500px" style="display:block;overflow-y:auto;">
            <tr>
                <th>缩略图</th>
                <th>商品编号</th>
                <th>商品名称</th>
                <th>商品价格</th>
                <th>商品种类</th>
                <th>商品信息</th>
                <th>操作</th>
            </tr>
            <c:forEach items="${goodsList}" var="goods">
                <tr>
                    <td class="center"><img src="<%=request.getContextPath() %>/resources/images/${goods.goodsImg}" width="100" height="100"/></td>
                    <td>${goods.goodsID}</td>
                    <td>${goods.goodsName}</td>
                    <td><strong class="rmb_icon">${goods.goodsPrice}</strong></td>
                    <td>${goods.goodsCategory}</td>
                    <td>${goods.goodsInf}</td>
                    <td>
                        <a href="" title="编辑" class="btn btn-success">编辑</a>
                        <a href="" title="删除" class="btn btn-danger">删除</a>
                    </td>
                </tr>
            </c:forEach>

        </table>
        <aside class="paging">
            <a href="<%=request.getContextPath()%>/goods/show/1">首页</a>
            <c:if test="${curPage==1}">
                上一页
            </c:if>
            <c:if test="${curPage!=1}">
                <a href="<%=request.getContextPath()%>/goods/show/${curPage-1}">上一页</a>
            </c:if>
            <c:if test="${curPage==pageCount}">
                下一页
            </c:if>
            <c:if test="${curPage!=pageCount}">
                <a href="<%=request.getContextPath()%>/goods/show/${curPage+1}">下一页</a>
            </c:if>
            <a href="<%=request.getContextPath()%>/goods/show/${pageCount}">尾页</a>
            第${curPage}页/共${pageCount}页
        </aside>
    </div>
</body>
</html>
